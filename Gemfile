source 'https://rubygems.org'

gem 'rails', '3.2.13'

gem 'pg'
gem 'jquery-rails'
gem 'devise'

gem 'simplecov',      :require => false, :group => :test
gem 'simplecov-rcov', :require => false, :group => :test

