      <%= f.text_field :client_name, :class => "form-control", :autofocus => true, :placeholder => "Company Name", :required => true %>

      <%= f.label :first_name %>
      <%= text_field_tag :first_name, nil, :class => "form-control", :placeholder => "First name", :required => true %>

      <%= f.label :last_name %>
      <%= text_field_tag :last_name, nil, :class => "form-control", :placeholder => "Last name", :required => true %>  

      <%= f.label :phone %>
      <%= text_field_tag :phone, nil, :class => "form-control", :placeholder => "(xxx) xxx-xxxx", :required => true %>


      <%= f.label :email %>
      <%= text_field_tag :email, nil, :class => "form-control", :placeholder => "Email address", :required => true %>

      <br />

      <%= f.submit "Create", :class => "btn btn-lg btn-primary btn-block" %>

