<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name, :autocomplete => :off), :html => {:class => "form-signin", :role => "form"}) do |f| %>
  <h2 class="form-signin-heading">Sign Up</h2>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :class => "form-control", :autofocus => true, :placeholder =>"Email address", :required => true %>

  <%= f.password_field :password, :class => "form-control", :required => true, :placeholder => "Password" %>

  <%= f.password_field :password_confirmation, :class => "form-control", :required => true, :placeholder => "Password Confirmation" %>

    <%= f.submit "Sign Up", :class => "btn btn-lg btn-primary btn-block" %>

<% end %>
