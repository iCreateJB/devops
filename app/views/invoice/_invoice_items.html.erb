<%= f.fields_for :invoice_items do |invoice_item| %>
  <%= invoice_item.label :amount %>
  <%= invoice_item.text_field :amount, :class => "form-control", :style => "width:150px;", :placeholder => "Amount" %>
  <%= invoice_item.label :title %>
  <%= invoice_item.text_field :title, :class => "form-control", :placeholder => "Title" %>
  <%= invoice_item.label :description %>
  <%= invoice_item.text_field :description, :class => "form-control", :placeholder => "Description" %>
  <%= invoice_item.link_to_remove "Remove this item" %>
<% end %>
<p><%= f.link_to_add "Add a item", :invoice_items %></p>